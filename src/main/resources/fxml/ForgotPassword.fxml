<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane stylesheets="@../styles/Styles.css"
	xmlns="http://javafx.com/javafx/8.0.72"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="com.davidmb.tarea3ADbase.controller.ForgotPasswordController">
	<children>
		<Rectangle fill="DODGERBLUE" height="250.0"
			stroke="#ffffff8b" strokeType="INSIDE" width="400.0" />
		<Label layoutX="97.0" layoutY="46.0" text="Recuperar Contraseña"
			textFill="WHITE">
			<font>
				<Font size="20.0" />
			</font>
		</Label>

		<!-- Campo para ingresar el correo electrónico -->
		<TextField fx:id="emailField" layoutX="50.0" layoutY="70.0"
			prefWidth="300.0" promptText="Introduce tu email" />
		<Label fx:id="lblEmailError" layoutX="50.0" layoutY="200.0"
			textFill="GREEN" />
		<TextField fx:id="passwordField" layoutX="50.0"
			layoutY="100.0" prefWidth="300.0"
			promptText="Introduce tu nueva contraseña" />
		<TextField fx:id="passwordField2" layoutX="50.0"
			layoutY="130.0" prefWidth="300.0"
			promptText="Repite tu nueva contraseña" />
		<Label fx:id="lblPasswordError" layoutX="50.0" layoutY="200.0" textFill="GREEN" />
		<!-- Botón para enviar la solicitud -->
		<HBox layoutX="50.0" layoutY="160.0" spacing="10.0">
			<Button layoutX="130.0" layoutY="120.0"
				mnemonicParsing="false" text="Cambiar Contraseña"
				onAction="#resetPassword"
				style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

			<!-- Botón para regresar al login -->
			<Button layoutX="130.0" layoutY="170.0"
				mnemonicParsing="false" text="Volver a Login"
				onAction="#backToLogin"
				style="-fx-background-color: #2196F3; -fx-text-fill: white;" />
		</HBox>
	</children>
	<opaqueInsets>
		<Insets />
	</opaqueInsets>
</AnchorPane>
