<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1" 
    fx:controller="com.davidmb.tarea3ADbase.controller.ForgotPasswordController"
    style="-fx-background-color: #f4f4f9;">
    <children>
        <!-- Fondo decorativo -->
        <Rectangle fill="#4CAF50" arcWidth="20" arcHeight="20" height="350" width="400" />

        <!-- Contenedor principal -->
        <VBox alignment="CENTER" spacing="20" layoutX="50.0" layoutY="40.0" prefWidth="300">
            <!-- Título -->
            <Label text="Recuperar Contraseña" textFill="WHITE" style="-fx-font-size: 22px; -fx-font-weight: bold;" />

            <!-- Campo de email -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <TextField fx:id="emailField" promptText="Introduce tu email" 
                    style="-fx-background-color: #ffffff; -fx-border-color: #d3d3d3; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
                <Label fx:id="lblEmailError" textFill="#FF0000" style="-fx-font-size: 12px; -fx-font-weight: bold;" visible="false" />
            </VBox>

            <!-- Campo de nueva contraseña -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <PasswordField fx:id="passwordField" promptText="Introduce tu nueva contraseña" 
                    style="-fx-background-color: #ffffff; -fx-border-color: #d3d3d3; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
            </VBox>

            <!-- Campo para repetir contraseña -->
            <VBox spacing="5" alignment="CENTER_LEFT">
                <PasswordField fx:id="passwordField2" promptText="Repite tu nueva contraseña" 
                    style="-fx-background-color: #ffffff; -fx-border-color: #d3d3d3; -fx-border-radius: 5px; -fx-background-radius: 5px;" />
                <Label fx:id="lblPasswordError" textFill="#FF0000" style="-fx-font-size: 12px; -fx-font-weight: bold;" visible="false" />
            </VBox>

            <!-- Botones -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Cambiar Contraseña" onAction="#resetPassword" 
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px;" />
                <Button text="Volver a Login" onAction="#backToLogin" 
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5px; -fx-padding: 10px;" />
            </HBox>
        </VBox>
    </children>
</AnchorPane>
